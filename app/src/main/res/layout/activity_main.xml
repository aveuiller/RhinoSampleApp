<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_title"
            android:id="@+id/title_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/build_mode_label" app:layout_constraintHorizontal_bias="1.0"/>


    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="javascript"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/title_text"
            app:layout_constraintTop_toBottomOf="@+id/keyword_upper_javascript" android:layout_marginTop="8dp"
            android:id="@+id/keyword_javascript"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JavaScript"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/title_text"
            android:id="@+id/keyword_upper_javascript" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/keyword_upper_js"
    />
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JS"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/title_text"
            android:id="@+id/keyword_upper_js"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/keyword_js"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="js"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/title_text"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/keyword_rhino"
            android:id="@+id/keyword_js"
    />
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rhino"
            android:id="@+id/keyword_rhino"
            app:layout_constraintStart_toStartOf="@+id/title_text"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/title_text"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/build_mode_label"
            app:layout_constraintTop_toTopOf="@+id/title_text" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/title_text"
            app:layout_constraintBottom_toBottomOf="@+id/title_text" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:textColor="@android:color/holo_red_dark"/>
</android.support.constraint.ConstraintLayout>